# .bash_env
#
# Environment variables. Sourced by .bashrc.

{%@@ if profile == "devoid" @@%}
# For Waybar tray icons to display properly
export XDG_CURRENT_DESKTOP=Unity

# For FireFox to use Wayland backend
export MOZ_WAYLAND_ENABLED=1

# Path
export PATH="$HOME"/bin:"$PATH"

# User service directory
export SVDIR=~/service

# Satisfy GPG for signing things
export GPG_TTY=$(tty)

# Tell qt5 to use Wayland backend
export QT_QPA_PLATFORM=wayland-egl
export ELM_DISPLAY=wl
{%@@ endif @@%}
